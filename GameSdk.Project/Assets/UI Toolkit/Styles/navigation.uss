:root {}

.navigation {
    width: 100%;
    height: 100%;
    flex: 1;
}

.navigation-screen {
    width: 100%;
    height: 100%;
    flex: 1;
    display: none;
    opacity: 0;
}

.navigation-screen__active {
    display: flex;
    opacity: 1;
    transition: all 0.3s ease-out-sine;
}

.navigation-screen.navigation-popup {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}
