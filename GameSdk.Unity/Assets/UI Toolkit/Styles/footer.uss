:root {
    --footer-base-size: 215px;
    --footer-base-font-size: var(--general-font-size);
    --footer-base-indent-large: 45px;
    --footer-base-indent-medium: 30px;
    --footer-base-indent-small: 15px;

    --footer-background-color: var(--general-background-color);
    --footer-button-text-color: var(--general-font-color);
    --footer-buttons-group-border-radius: 70px;
    --footer-buttons-group-background: rgba(200, 200, 200, 0.1);
    --footer-buttons-group-padding: var(--footer-base-indent-small);
    --footer-button-margin: var(--footer-base-indent-small);
}

.footer {
    font-size: var(--footer-base-font-size);
    flex-direction: row;
    justify-content: space-evenly;
    align-content: space-evenly;
    height: var(--footer-base-size);
    min-height: var(--footer-base-size);
    max-height: var(--footer-base-size);
    padding-left: var(--footer-base-indent-large);
    padding-right: var(--footer-base-indent-large);
    padding-top: var(--footer-base-indent-small);
    padding-bottom: var(--footer-base-indent-medium);
    background-color: var(--footer-background-color);
}

.footer-buttons-group {
    flex-grow: 3;
    flex-shrink: 1;
    flex-direction: row;
    justify-content: space-evenly;
    align-content: space-evenly;
    background-color: var(--footer-buttons-group-background);
    border-radius: var(--footer-buttons-group-border-radius);
    margin-top: var(--footer-button-margin);
    margin-bottom: var(--footer-button-margin);
    margin-right: var(--footer-button-margin);
    padding-left: var(--footer-buttons-group-padding);
    padding-right: var(--footer-buttons-group-padding);
}

.footer-button {
    flex-grow: 1;
    flex-shrink: 1;
    font-size: 100%;
    border-width: 0;
    background-color: transparent;
    color: var(--footer-button-text-color);
    max-width: 25%;
    white-space: normal;
    -unity-text-align: middle-center;
}

.footer-buttons-group .footer-button {
    max-width: 30%;
}
